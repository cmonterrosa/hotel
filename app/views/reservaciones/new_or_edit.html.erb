<div class="container">

  <div class="formee-msg-info">
    <h3>Información importante</h3>
    <ul>
      <li>Los campos marcados con <em class="formee-req">*</em> son obligatorios.</li>
    </ul>
  </div>

  <% form_for :reservacion, @reservacion, :url => { :action => "save"}, :html => {:class => "formee", :name => "reservacion"} do |f| -%>
  <fieldset>
    <legend>NUEVA RESERVACION</legend>

    <div id="prellenado" style="background:#ebf7aa;">
      <div class="grid-6-12">
        <label style=" font-weight: bold;">Nombre:</label>
        <%= f.text_field :nombre%>
      </div>
      <div class="grid-6-12">
        <label style=" font-weight: bold;">RFC:</label>
        <%= f.text_field :rfc%>
      </div>

      <div class="grid-12-12 clear"></div>

      <div class="grid-6-12">
        <label style=" font-weight: bold;">Dirección:</label>
        <%= f.text_area :direccion%>
      </div>

      <div class="grid-6-12">
        <label style=" font-weight: bold;">Lugar de procedencia:</label>
        <%= f.text_area :procedencia%>
      </div>

      <div class="grid-12-12 clear"></div>

       <div class="grid-6-12">
        <label style=" font-weight: bold;">Teléfono(s):</label>
        <%= f.text_field :telefono%>
      </div>

      <div class="grid-6-12">
        <label style=" font-weight: bold;">Correo electrónico:</label>
        <%= f.text_field :correo%>
      </div>

     

    <!-- categoria 
    <div class="grid-6-12">
      <label>Categoría: <em class="formee-req">*</em></label>
      <=f.select :categoria_escuela_id, CategoriaEscuela.all.collect {|p| [ p.descripcion, p.clave ] }, {:selected => @select_ce}, :onchange => "showDescription(this, 'escuela_categoria_desc');" %>
    </div>
    -->


    <div class="grid-12-12 clear"></div>



    
  

   

    <!-- submit -->
    <div class="grid-12-12">
      <input class="right" type="submit" onclick="to_uppercase();" title="GUARDAR RESERVACION" value="GUARDAR RESERVACION" />
    </div>
    </div>
  </fieldset>

  <%end%>
</div>
